<div class="container">
  <h2>Our cocktails:</h2>
  <% @cocktails.each do |cocktail| %>
    <div class="cocktail-card">
      <div class="card-text"> 
        <%= link_to cocktail.name, cocktail_path(cocktail), {:style=>'text-align: center;', :class => "css_class"}%>
      </div>
      <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    </div>
  <% end %>
</div>