<div class="container">
  <h1><%= @cocktail.name %></h1>
  <div class="row">
      <h3>Recipe</h3>
      <h4>Ingredient<h4>
      <h4>Description<h4>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
      <% end %>
          <div class="col-sm-12 col-md-6">
      <%= link_to new_cocktail_dose_path(@cocktail, @ingredient) do %>
        Add dose
      <% end %>
    </div>  
</div>