<div class="container">
<% if @cocktail.photo.attached? %>
<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path @cocktail.photo.key, height: 300, crop: :fill %>')">
  <% else %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://previews.123rf.com/images/polyudova/polyudova1704/polyudova170400064/77028714-alcoholic-cocktail-hand-drawn-vector-illustration-vintage-cocktail-icon-with-ice-and-leaves-of-mint-.jpg)">
       <% end %>
  <h1><%= @cocktail.name %></h1>
  <div class="container">
      <div class="row">
      <div class="col-sm"><h3>Recipe</h3></div>
      <div class="col-sm"><h4>Ingredient<h4></div>
      <div class="col-sm"><h4>Description<h4></div>
      </div>
  </div>
</div>
      <% @cocktail.doses.each do |dose| %>
        <%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
          <i class="fa fa-trash destroy_dose"></i>
        <% end %>
      <% end %>
          <div class="col-sm-12 col-md-6">
      <%= link_to new_cocktail_dose_path(@cocktail, @ingredient) do %>
        Add dose
      <% end %>
</div>
</div>
</div>


