
<div class="cocktail info">
  <h1><%= @cocktail.name %></h1>
  <% @cocktail.doses.each do |dose| %>
    <h3>Ingredient: <%= dose.ingredient.name %></h3>
    <h3>Dose: <%= dose.description %></h3>
    <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fa fa-trash destroy_dose"></i>
    <% end %>
  <% end %>
</div>  
<div class="col-sm-12 col-md-6">
  <%= link_to new_cocktail_dose_path(@cocktail, @ingredient) do %>
    Add dose
  <% end %>
  <div class="container">
  <% if @cocktail.photo.attached? %>
    <div class="card-category"><%= cl_image_tag @cocktail.photo.key, height: 300, crop: :fill %></div>
  <% else %>
    <div class="card-category"> <img src="https://previews.123rf.com/images/polyudova/polyudova1704/polyudova170400064/77028714-alcoholic-cocktail-hand-drawn-vector-illustration-vintage-cocktail-icon-with-ice-and-leaves-of-mint-.jpg" alt="default cocktail pic" width="300" height="300" ></div>
  <% end %>
</div>
</div>




